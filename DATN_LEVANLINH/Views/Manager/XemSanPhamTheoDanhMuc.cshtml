            </div>
            <div class="product-item-title">
                <p class="font-weight">@item.product_id</p>
            </div>
            <div class="product-item-title">
                <p class="font-weight">@item.quantity</p>
            </div>
            <div class="product-item-title">
                <p class="font-weight">@item.price</p>
            </div>
